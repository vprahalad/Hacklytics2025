import random
def codeWordAssign(secretMessage, wordsInRange):
    messageWords = secretMessage.split()
    aDict = {}
    values = []
    for word in messageWords:
        index = random.randint(0, len(wordsInRange) -1)
        codeWord = wordsInRange.pop(index)
        aDict[word] = codeWord
        values.append(codeWord)
    return aDict, values
      
